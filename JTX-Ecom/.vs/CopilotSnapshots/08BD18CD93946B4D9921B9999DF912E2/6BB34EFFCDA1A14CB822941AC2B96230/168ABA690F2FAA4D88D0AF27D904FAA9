using System.Diagnostics;
using JTX_Ecom.Data;
using JTX_Ecom.Models;
using Microsoft.AspNetCore.Mvc;
using Microsoft.EntityFrameworkCore;

namespace JTX_Ecom.Controllers
{
    public class HomeController : Controller
    {
        private readonly ILogger<HomeController> _logger;
        private readonly ApplicationDbContext _context;

        public HomeController(ILogger<HomeController> logger, ApplicationDbContext context)
        {
            _logger = logger;
            _context = context;
        }

        /// <summary>
        /// Display homepage with featured concerts from database
        /// </summary>
        public async Task<IActionResult> Index()
        {
            try
            {
                // Fetch active concerts with venue information
                var concerts = await _context.Concerts
                    .Include(c => c.Venue)  // Include venue details
                    .Where(c => c.IsActive)
                    .OrderBy(c => c.EventDate)
                    .Take(6)  // Get top 6 featured concerts
                    .ToListAsync();

                _logger.LogInformation($"Loaded {concerts.Count} concerts from database");

                return View(concerts);
            }
            catch (Exception ex)
            {
                _logger.LogError(ex, "Error loading concerts from database");
                // Return empty list if database error occurs
                return View(new List<Concert>());
            }
        }

        public IActionResult Privacy()
        {
            return View();
        }

        [ResponseCache(Duration = 0, Location = ResponseCacheLocation.None, NoStore = true)]
        public IActionResult Error()
        {
            return View(new ErrorViewModel { RequestId = Activity.Current?.Id ?? HttpContext.TraceIdentifier });
        }
    }
}
