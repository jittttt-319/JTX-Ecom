<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JTX Concert Tickets</title>
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Google Fonts - Inter for modern UI -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JTX_Ecom.styles.css" asp-append-version="true" />
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/assets/images/X-logo.png">
    
    <!-- Custom Styles Section -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="animate-fadeIn">
    <!-- Main Navigation -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container-fluid">
                <!-- Brand Logo with Image -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/assets/images/X-logo.png" alt="JTX Concerts" class="navbar-logo me-2">
                    <span class="brand-text">JTX Concerts</span>
                </a>
                
                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <!-- Navigation Links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Concerts" asp-action="Index">
                                <i class="fas fa-calendar-alt"></i> Concerts
                            </a>
                        </li>
                    </ul>
                    
                    <!-- Right Side Navigation -->
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Cart Icon -->
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                    <i class="bi bi-cart3 fs-5"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" 
                                          style="font-size: 0.7rem;">
                                        0
                                        <span class="visually-hidden">items in cart</span>
                                    </span>
                                </a>
                            </li>
                            
                            <!-- Admin Dashboard Link -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i> Admin
                                    </a>
                                </li>
                            }
                            
                            <!-- User Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" 
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle fs-5 me-1"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                            <i class="bi bi-person"></i> My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Orders" asp-action="MyTickets">
                                            <i class="bi bi-ticket-perforated"></i> My Tickets
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                                            <i class="bi bi-bag-check"></i> My Orders
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- Login Button -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <!-- Register Button -->
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary ms-2" asp-controller="Account" asp-action="Register" 
                                   style="color: white !important;">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Main Content Area -->
    <main role="main" class="mb-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer text-white py-5">
        <div class="container">
            <div class="row g-4">
                <!-- About Section -->
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <div class="d-flex align-items-center mb-3">
                        <img src="~/assets/images/X-logo.png" alt="JTX Concerts" class="footer-logo me-3">
                        <h5 class="mb-0">
                            <span class="text-gradient">JTX Concerts</span>
                        </h5>
                    </div>
                    <p class="text-secondary mb-4">
                        Your premier destination for concert tickets. Experience unforgettable live music events 
                        across Malaysia with secure booking and exclusive deals.
                    </p>
                    <!-- Social Links -->
                    <div class="social-links">
                        <a href="#" aria-label="Facebook"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" aria-label="Twitter"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" aria-label="Instagram"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" aria-label="YouTube"><i class="fab fa-youtube fa-lg"></i></a>
                        <a href="#" aria-label="TikTok"><i class="fab fa-tiktok fa-lg"></i></a>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div class="col-lg-2 col-md-4 mb-4 mb-lg-0">
                    <h6 class="text-white mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-controller="Home" asp-action="Index"><i class="bi bi-chevron-right"></i> Home</a></li>
                        <li class="mb-2"><a asp-controller="Concerts" asp-action="Index"><i class="bi bi-chevron-right"></i> Browse Concerts</a></li>
                        <li class="mb-2"><a href="#"><i class="bi bi-chevron-right"></i> Artists</a></li>
                        <li class="mb-2"><a href="#"><i class="bi bi-chevron-right"></i> Venues</a></li>
                    </ul>
                </div>
                
                <!-- Support -->
                <div class="col-lg-2 col-md-4 mb-4 mb-lg-0">
                    <h6 class="text-white mb-3">Support</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#"><i class="bi bi-chevron-right"></i> Help Center</a></li>
                        <li class="mb-2"><a href="#"><i class="bi bi-chevron-right"></i> Contact Us</a></li>
                        <li class="mb-2"><a href="#"><i class="bi bi-chevron-right"></i> FAQ</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="Privacy"><i class="bi bi-chevron-right"></i> Privacy Policy</a></li>
                    </ul>
                </div>
                
                <!-- Contact Info -->
                <div class="col-lg-4 col-md-4">
                    <h6 class="text-white mb-3">Contact Us</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-geo-alt text-gradient"></i> 
                            <span class="text-secondary">Kuala Lumpur, Malaysia</span>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-envelope text-gradient"></i> 
                            <span class="text-secondary">support@jtxconcerts.com</span>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-phone text-gradient"></i> 
                            <span class="text-secondary">+60 3-1234 5678</span>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-clock text-gradient"></i> 
                            <span class="text-secondary">24/7 Customer Support</span>
                        </li>
                    </ul>
                </div>
            </div>
            
            <!-- Copyright -->
            <hr class="my-4" style="border-color: rgba(255, 255, 255, 0.1);" />
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0 text-secondary">
                        &copy; 2025 JTX Concerts. All Rights Reserved.
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-0 text-secondary">
                        Made with <i class="fas fa-heart text-danger"></i> in Malaysia
                    </p>
                </div>
            </div>
        </div>
    </footer>
    
    <!-- Back to Top Button -->
    <button id="backToTop" class="btn btn-primary rounded-circle" 
            style="position: fixed; bottom: 30px; right: 30px; width: 50px; height: 50px; display: none; z-index: 999;"
            aria-label="Back to top">
        <i class="bi bi-arrow-up"></i>
    </button>
    
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Back to Top Script -->
    <script>
        // Back to top button
        window.addEventListener('scroll', function() {
            const backToTop = document.getElementById('backToTop');
            if (window.scrollY > 300) {
                backToTop.style.display = 'block';
            } else {
                backToTop.style.display = 'none';
            }
        });
        
        document.getElementById('backToTop')?.addEventListener('click', function() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
        
        // Add active class to current nav link
        const currentLocation = location.pathname;
        const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
        navLinks.forEach(link => {
            if (link.getAttribute('href') === currentLocation) {
                link.classList.add('active');
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
