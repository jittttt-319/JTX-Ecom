@model IEnumerable<JTX_Ecom.Models.Concert>

@{
    ViewData["Title"] = "Manage Concerts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <h4 class="mb-0 text-dark fw-bold">
            <i class="bi bi-music-note-list"></i> All Concerts
            <span class="badge bg-primary ms-2">@Model.Count()</span>
        </h4>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="CreateConcert" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Add New Concert
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="text-dark fw-bold">ID</th>
                        <th class="text-dark fw-bold">Title</th>
                        <th class="text-dark fw-bold">Artist</th>
                        <th class="text-dark fw-bold">Genre</th>
                        <th class="text-dark fw-bold">Event Date</th>
                        <th class="text-dark fw-bold">Venue</th>
                        <th class="text-dark fw-bold">Price</th>
                        <th class="text-dark fw-bold">Tickets</th>
                        <th class="text-dark fw-bold">Status</th>
                        <th class="text-dark fw-bold text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var concert in Model)
                        {
                            <tr>
                                <td class="text-dark fw-semibold">#@concert.ConcertId</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(concert.ImageUrl))
                                        {
                                            <img src="@concert.ImageUrl" alt="@concert.Title" 
                                                 class="rounded me-2" 
                                                 style="width: 50px; height: 50px; object-fit: cover;"
                                                 onerror="this.style.display='none'">
                                        }
                                        <div>
                                            <strong class="text-dark d-block">@concert.Title</strong>
                                            <small class="text-muted">@concert.EventTime.ToString("hh:mm tt")</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-dark">@concert.Artist</td>
                                <td><span class="badge bg-primary">@concert.Genre</span></td>
                                <td class="text-dark fw-semibold">
                                    <i class="bi bi-calendar-event text-primary"></i>
                                    @concert.EventDate.ToString("dd MMM yyyy")
                                </td>
                                <td class="text-dark">
                                    <i class="bi bi-geo-alt text-primary"></i>
                                    @concert.Venue?.Name
                                </td>
                                <td class="text-dark fw-bold">RM @concert.BasePrice.ToString("N2")</td>
                                <td>
                                    <div class="text-dark fw-semibold mb-1">
                                        @concert.AvailableTickets / @concert.TotalTickets
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        @{
                                            var percent = concert.TotalTickets > 0 ? (concert.AvailableTickets * 100 / concert.TotalTickets) : 0;
                                        }
                                        <div class="progress-bar @(percent > 50 ? "bg-success" : percent > 20 ? "bg-warning" : "bg-danger")" 
                                             style="width: @percent%"
                                             role="progressbar" 
                                             aria-valuenow="@percent" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                    <small class="text-muted">@percent% available</small>
                                </td>
                                <td>
                                    @if (concert.IsActive)
                                    {
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="bi bi-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary px-3 py-2">
                                            <i class="bi bi-x-circle"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-action="EditConcert" asp-route-id="@concert.ConcertId" 
                                           class="btn btn-sm btn-outline-primary" title="Edit Concert">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-controller="Concerts" asp-action="Details" asp-route-id="@concert.ConcertId"
                                           target="_blank"
                                           class="btn btn-sm btn-outline-info" title="View Public Page">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="DeleteConcert" asp-route-id="@concert.ConcertId" 
                                           class="btn btn-sm btn-outline-danger" title="Delete Concert">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center py-5">
                                <i class="bi bi-music-note-beamed display-1 text-muted"></i>
                                <h5 class="text-dark mt-3">No Concerts Yet</h5>
                                <p class="text-muted">Start by adding your first concert</p>
                                <a asp-action="CreateConcert" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Add New Concert
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
<style>
    .text-dark {
        color: #2c3e50 !important;
    }
    
    .table {
        color: #2c3e50;
    }
    
    .table thead {
        background-color: #f8f9fa !important;
        border-bottom: 2px solid #dee2e6;
    }
    
    .table tbody tr {
        border-bottom: 1px solid #e9ecef;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .btn-group .btn {
        margin: 0 2px;
    }
    
    .badge {
        font-size: 0.875rem;
        font-weight: 600;
    }
    
    .progress {
        background-color: #e9ecef;
        border-radius: 10px;
    }
    
    .card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
    }
</style>
}
