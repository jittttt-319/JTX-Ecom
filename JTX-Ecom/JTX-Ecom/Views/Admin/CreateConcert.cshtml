@model JTX_Ecom.Models.DTOs.ConcertDto

@{
    ViewData["Title"] = "Create Concert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-10 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-plus-circle"></i> Add New Concert
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateConcert" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Basic Information Section -->
                    <div class="section-header mb-3">
                        <h6 class="text-success fw-bold">
                            <i class="bi bi-info-circle"></i> Basic Information
                        </h6>
                        <hr>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label fw-bold text-dark">Concert Title *</label>
                                <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter concert title" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Genre" class="form-label fw-bold text-dark">Genre *</label>
                                <select asp-for="Genre" class="form-select form-select-lg">
                                    <option value="">Select Genre</option>
                                    <option value="Rock">Rock</option>
                                    <option value="Pop">Pop</option>
                                    <option value="Jazz">Jazz</option>
                                    <option value="Classical">Classical</option>
                                    <option value="Electronic">Electronic</option>
                                    <option value="Hip Hop">Hip Hop</option>
                                    <option value="Country">Country</option>
                                    <option value="R&B">R&B</option>
                                    <option value="Metal">Metal</option>
                                    <option value="Alternative">Alternative</option>
                                    <option value="World Music">World Music</option>
                                </select>
                                <span asp-validation-for="Genre" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Artist" class="form-label fw-bold text-dark">Artist Name *</label>
                        <input asp-for="Artist" class="form-control form-control-lg" placeholder="Enter artist name" />
                        <span asp-validation-for="Artist" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold text-dark">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" 
                                  placeholder="Enter concert description, special guests, and event details"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Event Details Section -->
                    <div class="section-header mb-3 mt-4">
                        <h6 class="text-success fw-bold">
                            <i class="bi bi-calendar-event"></i> Event Details
                        </h6>
                        <hr>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="EventDate" class="form-label fw-bold text-dark">Event Date *</label>
                                <input asp-for="EventDate" type="date" class="form-control form-control-lg" />
                                <span asp-validation-for="EventDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="EventTime" class="form-label fw-bold text-dark">Event Time *</label>
                                <input asp-for="EventTime" type="time" class="form-control form-control-lg" />
                                <span asp-validation-for="EventTime" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="VenueId" class="form-label fw-bold text-dark">Venue *</label>
                                <select asp-for="VenueId" class="form-select form-select-lg">
                                    <option value="">Select Venue</option>
                                    @foreach (var venue in ViewBag.Venues)
                                    {
                                        <option value="@venue.VenueId">@venue.Name - @venue.City</option>
                                    }
                                </select>
                                <span asp-validation-for="VenueId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Pricing & Tickets Section -->
                    <div class="section-header mb-3 mt-4">
                        <h6 class="text-success fw-bold">
                            <i class="bi bi-ticket-perforated"></i> Pricing & Tickets
                        </h6>
                        <hr>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="BasePrice" class="form-label fw-bold text-dark">Base Price (RM) *</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light text-dark">RM</span>
                                    <input asp-for="BasePrice" type="number" step="0.01" class="form-control" 
                                           placeholder="0.00" />
                                </div>
                                <span asp-validation-for="BasePrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="TotalTickets" class="form-label fw-bold text-dark">Total Tickets *</label>
                                <input asp-for="TotalTickets" type="number" class="form-control form-control-lg" 
                                       placeholder="Total tickets available" />
                                <span asp-validation-for="TotalTickets" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="AvailableTickets" class="form-label fw-bold text-dark">Available Tickets *</label>
                                <input asp-for="AvailableTickets" type="number" class="form-control form-control-lg" 
                                       placeholder="Currently available" />
                                <span asp-validation-for="AvailableTickets" class="text-danger"></span>
                                <small class="form-text text-muted">Usually same as Total Tickets for new concerts</small>
                            </div>
                        </div>
                    </div>

                    <!-- Image Upload Section -->
                    <div class="section-header mb-3 mt-4">
                        <h6 class="text-success fw-bold">
                            <i class="bi bi-image"></i> Concert Image
                        </h6>
                        <hr>
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-dark">Upload Image</label>
                                <input type="file" id="imageUpload" class="form-control form-control-lg" 
                                       accept="image/*" onchange="previewImage(event)">
                                <small class="form-text text-muted d-block mt-1">
                                    <i class="bi bi-info-circle"></i> Recommended: 600x250px, JPG or PNG, max 5MB
                                </small>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ImageUrl" class="form-label fw-bold text-dark">Or Enter Image Path</label>
                                <input asp-for="ImageUrl" class="form-control" id="imageUrlInput"
                                       placeholder="/assets/images/concerts/concert.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                <small class="form-text text-muted d-block mt-1">
                                    Enter the path if image is already uploaded to /wwwroot/assets/images/concerts/
                                </small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold text-dark">Preview</label>
                            <div class="image-preview-container">
                                <img id="imagePreview" src="/assets/images/concerts/placeholder.jpg" 
                                     alt="Preview" class="img-fluid rounded border">
                                <div id="noImageText" class="text-center text-muted">
                                    <i class="bi bi-image display-1"></i>
                                    <p class="mt-2">No image selected</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Status Section -->
                    <div class="section-header mb-3 mt-4">
                        <h6 class="text-success fw-bold">
                            <i class="bi bi-toggle-on"></i> Status
                        </h6>
                        <hr>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked
                                   role="switch" id="isActiveSwitch" style="width: 3em; height: 1.5em;" />
                            <label asp-for="IsActive" class="form-check-label fw-bold text-dark" for="isActiveSwitch">
                                Active (Concert will be visible to users)
                            </label>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="mt-4 pt-3 border-top">
                        <button type="submit" class="btn btn-success btn-lg me-2">
                            <i class="bi bi-plus-circle"></i> Create Concert
                        </button>
                        <a asp-action="Concerts" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
<style>
    .form-label {
        color: #2c3e50 !important;
        font-weight: 600 !important;
    }
    
    .text-dark {
        color: #2c3e50 !important;
    }
    
    .form-control, .form-select {
        border: 2px solid #e9ecef;
        color: #2c3e50 !important;
        font-weight: 500;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        color: #2c3e50 !important;
    }
    
    .form-control::placeholder {
        color: #95a5a6 !important;
    }
    
    .input-group-text {
        background-color: #f8f9fa;
        border: 2px solid #e9ecef;
        color: #2c3e50;
        font-weight: 600;
    }
    
    .section-header h6 {
        color: #28a745 !important;
        margin-bottom: 0.5rem;
    }
    
    .image-preview-container {
        width: 100%;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
        border-radius: 8px;
        overflow: hidden;
        position: relative;
    }
    
    .image-preview-container img {
        max-width: 100%;
        max-height: 100%;
        object-fit: cover;
        display: none;
    }
    
    .image-preview-container img.show {
        display: block;
    }
    
    #noImageText {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    
    .card {
        border: none;
        border-radius: 12px;
    }
    
    .card-header.bg-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
        border-radius: 12px 12px 0 0 !important;
        padding: 1.25rem 1.5rem;
    }
    
    .btn-lg {
        padding: 0.75rem 2rem;
        font-weight: 600;
    }
    
    .form-text.text-muted {
        color: #7f8c8d !important;
        font-size: 0.875rem;
    }
</style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('imagePreview');
                    const noImageText = document.getElementById('noImageText');
                    
                    preview.src = e.target.result;
                    preview.classList.add('show');
                    if (noImageText) noImageText.style.display = 'none';
                    
                    // Update the image URL input with the filename
                    const filename = file.name;
                    document.getElementById('imageUrlInput').value = '/assets/images/concerts/' + filename;
                }
                reader.readAsDataURL(file);
            }
        }
        
        // Update preview when URL is manually entered
        document.getElementById('imageUrlInput')?.addEventListener('change', function() {
            const url = this.value;
            if (url) {
                const preview = document.getElementById('imagePreview');
                const noImageText = document.getElementById('noImageText');
                
                preview.src = url;
                preview.classList.add('show');
                if (noImageText) noImageText.style.display = 'none';
            }
        });
    </script>
}
