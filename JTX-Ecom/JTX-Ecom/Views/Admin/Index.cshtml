@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Admin Dashboard</h1>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Total Concerts</h6>
                        <h2 class="card-title mb-0">@ViewBag.Stats.TotalConcerts</h2>
                    </div>
                    <i class="bi bi-music-note-list" style="font-size: 3rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Active Concerts</h6>
                        <h2 class="card-title mb-0">@ViewBag.Stats.ActiveConcerts</h2>
                    </div>
                    <i class="bi bi-check-circle" style="font-size: 3rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Total Orders</h6>
                        <h2 class="card-title mb-0">@ViewBag.Stats.TotalOrders</h2>
                    </div>
                    <i class="bi bi-receipt" style="font-size: 3rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Total Revenue</h6>
                        <h2 class="card-title mb-0">$@ViewBag.Stats.TotalRevenue.ToString("N0")</h2>
                    </div>
                    <i class="bi bi-currency-dollar" style="font-size: 3rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-action="CreateConcert" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-plus-circle"></i> Add New Concert
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-action="Concerts" class="btn btn-secondary btn-lg w-100">
                            <i class="bi bi-list"></i> Manage Concerts
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-action="Orders" class="btn btn-info btn-lg w-100">
                            <i class="bi bi-receipt"></i> View Orders
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
