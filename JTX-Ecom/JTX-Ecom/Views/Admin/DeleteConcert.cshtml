@model JTX_Ecom.Models.Concert

@{
    ViewData["Title"] = "Delete Concert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Concert</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>Warning!</strong> Are you sure you want to delete this concert? This action cannot be undone.
                </div>

                <h3>@Model.Title</h3>
                <hr>

                <dl class="row">
                    <dt class="col-sm-3">Artist</dt>
                    <dd class="col-sm-9">@Model.Artist</dd>

                    <dt class="col-sm-3">Genre</dt>
                    <dd class="col-sm-9">@Model.Genre</dd>

                    <dt class="col-sm-3">Event Date</dt>
                    <dd class="col-sm-9">@Model.EventDate.ToString("MMMM dd, yyyy")</dd>

                    <dt class="col-sm-3">Event Time</dt>
                    <dd class="col-sm-9">@Model.EventTime.ToString("hh:mm tt")</dd>

                    <dt class="col-sm-3">Venue</dt>
                    <dd class="col-sm-9">@Model.Venue?.Name - @Model.Venue?.City, @Model.Venue?.State</dd>

                    <dt class="col-sm-3">Price</dt>
                    <dd class="col-sm-9">$@Model.BasePrice.ToString("N2")</dd>

                    <dt class="col-sm-3">Tickets</dt>
                    <dd class="col-sm-9">@Model.AvailableTickets / @Model.TotalTickets available</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>
                </dl>

                <form asp-action="DeleteConcert" method="post">
                    <input type="hidden" asp-for="ConcertId" />
                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash"></i> Yes, Delete Concert
                        </button>
                        <a asp-action="Concerts" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
