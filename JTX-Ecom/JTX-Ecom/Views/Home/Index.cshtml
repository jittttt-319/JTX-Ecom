@model IEnumerable<JTX_Ecom.Models.Concert>

@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section - Stunning Visual -->
<section class="modern-hero">
    <div class="hero-background"></div>
    <div class="hero-overlay"></div>
    <div class="container hero-content-wrapper">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6 text-center text-lg-start">
                <div class="hero-badge animate-fadeInDown">
                    <i class="bi bi-star-fill"></i> Malaysia's #1 Concert Ticketing Platform
                </div>
                <h1 class="hero-title animate-fadeInUp">
                    Experience the
                    <span class="text-gradient">Magic of Live Music</span>
                </h1>
                <p class="hero-subtitle animate-fadeInUp">
                    Book tickets to Malaysia's hottest concerts, festivals, and live events. 
                    Secure, fast, and easy - your next unforgettable experience awaits!
                </p>
                <div class="hero-actions animate-fadeInUp">
                    <a asp-controller="Concerts" asp-action="Index" class="btn btn-primary btn-lg me-3">
                        <i class="bi bi-ticket-perforated"></i> Explore Events
                    </a>
                    <a href="#features" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-play-circle"></i> Learn More
                    </a>
                </div>
                
                <!-- Stats -->
                <div class="hero-stats mt-5">
                    <div class="stat-item">
                        <h3 class="stat-number">10K+</h3>
                        <p class="stat-label">Happy Fans</p>
                    </div>
                    <div class="stat-item">
                        <h3 class="stat-number">500+</h3>
                        <p class="stat-label">Events Hosted</p>
                    </div>
                    <div class="stat-item">
                        <h3 class="stat-number">50+</h3>
                        <p class="stat-label">Top Venues</p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6 d-none d-lg-block">
                <div class="hero-image-container animate-fadeInRight">
                    <!-- Floating Concert Cards -->
                    <div class="floating-card card-1">
                        <i class="bi bi-music-note-beamed fs-1 text-gradient"></i>
                        <p class="mb-0 fw-bold">Live Concerts</p>
                    </div>
                    <div class="floating-card card-2">
                        <i class="bi bi-people fs-1 text-gradient-accent"></i>
                        <p class="mb-0 fw-bold">Music Festivals</p>
                    </div>
                    <div class="floating-card card-3">
                        <i class="bi bi-star fs-1" style="color: var(--accent-gold);"></i>
                        <p class="mb-0 fw-bold">VIP Experience</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
        <i class="bi bi-chevron-down"></i>
    </div>
</section>

<!-- Quick Search Bar -->
<section class="search-section">
    <div class="container">
        <div class="search-card">
            <form asp-controller="Concerts" asp-action="Index" method="get" class="search-form">
                <div class="row g-3">
                    <div class="col-md-5">
                        <div class="input-with-icon">
                            <i class="bi bi-search"></i>
                            <input type="text" name="search" class="form-control" placeholder="Search concerts, artists...">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-with-icon">
                            <i class="bi bi-filter"></i>
                            <select name="genre" class="form-select">
                                <option value="">All Genres</option>
                                <option value="Rock">Rock</option>
                                <option value="Pop">Pop</option>
                                <option value="Jazz">Jazz</option>
                                <option value="Electronic">Electronic</option>
                                <option value="Hip Hop">Hip Hop</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Search Events
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Featured Concerts Section -->
<section class="featured-concerts py-5">
    <div class="container">
        <div class="section-header text-center mb-5">
            <span class="section-badge">This Month's Highlights</span>
            <h2 class="section-title-modern">
                <span class="text-gradient">Featured</span> Concerts
            </h2>
            <p class="section-subtitle">Don't miss these incredible live music experiences</p>
        </div>
        
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var concert in Model.Take(6))
                {
                    var availabilityPercent = concert.TotalTickets > 0 
                        ? Math.Round((decimal)concert.AvailableTickets / concert.TotalTickets * 100, 0)
                        : 0;
                    var isSoldOut = concert.AvailableTickets == 0;
                    var isLowStock = availabilityPercent < 20 && !isSoldOut;
                    
                    <div class="col-lg-4 col-md-6">
                        <div class="modern-concert-card" data-aos="fade-up" data-aos-delay="@(Model.ToList().IndexOf(concert) * 100)">
                            <!-- Concert Image -->
                            <div class="concert-image-wrapper">
                                @if (!string.IsNullOrEmpty(concert.ImageUrl))
                                {
                                    <img src="@concert.ImageUrl" alt="@concert.Title" class="concert-image">
                                }
                                else
                                {
                                    <div class="concert-image-placeholder">
                                        <i class="bi bi-music-note-beamed"></i>
                                    </div>
                                }
                                
                                <!-- Status Badges -->
                                @if (isSoldOut)
                                {
                                    <span class="status-badge sold-out">SOLD OUT</span>
                                }
                                else if (isLowStock)
                                {
                                    <span class="status-badge low-stock">SELLING FAST</span>
                                }
                                
                                <!-- Genre Badge -->
                                <span class="genre-badge">@concert.Genre</span>
                                
                                <!-- Quick Action Button -->
                                <div class="quick-action">
                                    <a asp-controller="Concerts" asp-action="Details" asp-route-id="@concert.ConcertId" 
                                       class="btn btn-sm btn-light">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </div>
                            </div>
                            
                            <!-- Concert Info -->
                            <div class="concert-info-wrapper">
                                <div class="concert-date">
                                    <i class="bi bi-calendar-event"></i> 
                                    @concert.EventDate.ToString("ddd, dd MMM yyyy")
                                </div>
                                
                                <h3 class="concert-name">@concert.Title</h3>
                                
                                <div class="concert-meta">
                                    <div class="meta-item">
                                        <i class="bi bi-person"></i> @concert.Artist
                                    </div>
                                    <div class="meta-item">
                                        <i class="bi bi-geo-alt"></i> @concert.Venue?.Name
                                    </div>
                                    <div class="meta-item">
                                        <i class="bi bi-clock"></i> @concert.EventTime.ToString("hh:mm tt")
                                    </div>
                                </div>
                                
                                <!-- Availability Bar -->
                                <div class="availability-wrapper">
                                    <div class="availability-bar">
                                        <div class="availability-fill" style="width: @availabilityPercent%"></div>
                                    </div>
                                    <span class="availability-text">@concert.AvailableTickets tickets left</span>
                                </div>
                                
                                <!-- Price & Action -->
                                <div class="concert-footer">
                                    <div class="price-wrapper">
                                        <span class="price-label">From</span>
                                        <span class="price-value">RM @concert.BasePrice.ToString("N2")</span>
                                    </div>
                                    @if (!isSoldOut)
                                    {
                                        <a asp-controller="Concerts" asp-action="Details" asp-route-id="@concert.ConcertId" 
                                           class="btn btn-primary">
                                            <i class="bi bi-ticket-perforated"></i> Book Now
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary" disabled>Sold Out</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="text-center mt-5">
                <a asp-controller="Concerts" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-grid"></i> View All Concerts
                </a>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-calendar-x"></i>
                <h3>No Concerts Available</h3>
                <p>Check back soon for exciting upcoming events!</p>
            </div>
        }
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features-section py-5">
    <div class="container">
        <div class="section-header text-center mb-5">
            <span class="section-badge">Why Choose Us</span>
            <h2 class="section-title-modern">
                Your <span class="text-gradient">Trusted</span> Ticketing Partner
            </h2>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="feature-card" data-aos="fade-up" data-aos-delay="100">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h4 class="feature-title">100% Secure</h4>
                    <p class="feature-description">
                        SSL encrypted payments and buyer protection guarantee
                    </p>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="feature-card" data-aos="fade-up" data-aos-delay="200">
                    <div class="feature-icon">
                        <i class="bi bi-phone"></i>
                    </div>
                    <h4 class="feature-title">Mobile Tickets</h4>
                    <p class="feature-description">
                        Digital tickets delivered instantly to your phone
                    </p>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="feature-card" data-aos="fade-up" data-aos-delay="300">
                    <div class="feature-icon">
                        <i class="bi bi-headset"></i>
                    </div>
                    <h4 class="feature-title">24/7 Support</h4>
                    <p class="feature-description">
                        Our team is always ready to help you
                    </p>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="feature-card" data-aos="fade-up" data-aos-delay="400">
                    <div class="feature-icon">
                        <i class="bi bi-percent"></i>
                    </div>
                    <h4 class="feature-title">Best Prices</h4>
                    <p class="feature-description">
                        Competitive pricing with no hidden fees
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter CTA -->
<section class="newsletter-cta py-5">
    <div class="container">
        <div class="newsletter-card">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <i class="bi bi-envelope-heart newsletter-icon"></i>
                    <h2 class="newsletter-title">Never Miss a Beat!</h2>
                    <p class="newsletter-text">
                        Subscribe to our newsletter for exclusive presale access, 
                        special offers, and updates on upcoming concerts.
                    </p>
                </div>
                <div class="col-lg-6">
                    <form class="newsletter-form">
                        <div class="input-group input-group-lg">
                            <input type="email" class="form-control" placeholder="Enter your email" required>
                            <button class="btn btn-light" type="submit">
                                <i class="bi bi-send"></i> Subscribe Now
                            </button>
                        </div>
                        <small class="form-text">
                            <i class="bi bi-lock"></i> We respect your privacy. Unsubscribe anytime.
                        </small>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

