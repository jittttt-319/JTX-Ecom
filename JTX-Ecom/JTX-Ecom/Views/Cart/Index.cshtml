@model JTX_Ecom.Models.DTOs.CartSummaryDto

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4 text-dark fw-bold">
                <i class="bi bi-cart3"></i> Shopping Cart
            </h2>
        </div>
    </div>

    @if (Model.Items.Any())
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                @foreach (var item in Model.Items)
                {
                    <div class="card mb-3 cart-item-card">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.ConcertTitle" class="img-fluid rounded">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 80px;">
                                            <i class="bi bi-music-note-beamed fs-2 text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-5">
                                    <h5 class="mb-1 text-dark fw-bold">@item.ConcertTitle</h5>
                                    <p class="text-secondary mb-1 fw-semibold">
                                        <i class="bi bi-person-fill text-primary"></i> @item.Artist
                                    </p>
                                    <p class="text-secondary mb-1 fw-semibold">
                                        <i class="bi bi-calendar-event text-primary"></i> @item.EventDate.ToString("dd MMM yyyy")
                                    </p>
                                    <p class="text-secondary mb-0 fw-semibold">
                                        <i class="bi bi-geo-alt-fill text-primary"></i> @item.VenueName
                                    </p>
                                    <span class="badge bg-primary mt-2 px-3 py-2">@item.TicketType</span>
                                </div>
                                <div class="col-md-2 text-center">
                                    <label class="form-label small fw-bold text-dark">Quantity</label>
                                    <form asp-action="UpdateQuantity" method="post" class="update-quantity-form">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="CartItemId" value="@item.CartItemId" />
                                        <select name="Quantity" class="form-select form-select-sm quantity-select" data-cart-item-id="@item.CartItemId">
                                            @for (int i = 1; i <= 10; i++)
                                            {
                                                <option value="@i" selected="@(i == item.Quantity)">@i</option>
                                            }
                                        </select>
                                    </form>
                                </div>
                                <div class="col-md-2 text-center">
                                    <p class="text-secondary small mb-0 fw-semibold">RM @item.PricePerTicket.ToString("N2") each</p>
                                    <h5 class="mb-0 text-primary fw-bold subtotal-@item.CartItemId">RM @item.Subtotal.ToString("N2")</h5>
                                </div>
                                <div class="col-md-1 text-center">
                                    <form asp-action="RemoveItem" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Remove this item from cart?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card sticky-top order-summary-card" style="top: 20px;">
                    <div class="card-body">
                        <h5 class="card-title mb-4 text-dark fw-bold">Order Summary</h5>
                        
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-dark fw-semibold">Total Items:</span>
                            <span class="fw-bold text-dark">@Model.TotalItems ticket(s)</span>
                        </div>
                        
                        <hr>
                        
                        <div class="d-flex justify-content-between mb-3">
                            <h5 class="mb-0 text-dark fw-bold">Total:</h5>
                            <h5 class="mb-0 text-primary fw-bold" id="cart-total">RM @Model.TotalAmount.ToString("N2")</h5>
                        </div>

                        <a asp-controller="Cart" asp-action="Checkout" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="bi bi-credit-card"></i> Proceed to Checkout
                        </a>

                        <a asp-controller="Concerts" asp-action="Index" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-arrow-left"></i> Continue Shopping
                        </a>

                        <hr class="my-3">

                        <div class="text-dark small">
                            <p class="mb-2 fw-semibold"><i class="bi bi-shield-check text-success"></i> Secure checkout</p>
                            <p class="mb-2 fw-semibold"><i class="bi bi-arrow-clockwise text-info"></i> Free cancellation</p>
                            <p class="mb-0 fw-semibold"><i class="bi bi-headset text-primary"></i> 24/7 support</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card text-center py-5 empty-cart-card">
                    <div class="card-body">
                        <i class="bi bi-cart-x display-1 text-muted mb-3"></i>
                        <h3 class="text-dark fw-bold">Your cart is empty</h3>
                        <p class="text-secondary mb-4 fw-semibold">Add some tickets to get started!</p>
                        <a asp-controller="Concerts" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-search"></i> Browse Concerts
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
<style>
    /* Cart Page Specific Styles */
    .cart-item-card,
    .order-summary-card,
    .empty-cart-card {
        background: #ffffff !important;
        border: 1px solid #e9ecef;
        border-radius: 12px;
    }
    
    .cart-item-card .card-body,
    .order-summary-card .card-body,
    .empty-cart-card .card-body {
        background: #ffffff !important;
    }
    
    .text-dark {
        color: #2c3e50 !important;
    }
    
    .text-secondary {
        color: #6c757d !important;
    }
    
    .text-primary {
        color: #667eea !important;
    }
    
    h2, h3, h5 {
        color: #2c3e50 !important;
    }
    
    .card-title {
        color: #2c3e50 !important;
    }
    
    /* Form Elements */
    .form-select {
        background: #f8f9fa;
        border: 2px solid #e9ecef;
        color: #2c3e50 !important;
        font-weight: 600;
    }
    
    .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .form-label {
        color: #2c3e50 !important;
    }
    
    /* Badge */
    .badge {
        font-size: 0.875rem;
        font-weight: 700;
    }
    
    /* Buttons */
    .btn-lg {
        padding: 0.75rem 2rem;
        font-weight: 700;
    }
</style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.quantity-select').on('change', function() {
                var cartItemId = $(this).data('cart-item-id');
                var quantity = $(this).val();
                
                $.ajax({
                    url: '@Url.Action("UpdateQuantity", "Cart")',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        CartItemId: cartItemId,
                        Quantity: quantity
                    },
                    success: function(response) {
                        if (response.success) {
                            $('.subtotal-' + cartItemId).text('RM ' + response.subtotal);
                            $('#cart-total').text('RM ' + response.totalAmount);
                        } else {
                            alert(response.message);
                            location.reload();
                        }
                    },
                    error: function() {
                        alert('Error updating quantity');
                        location.reload();
                    }
                });
            });
        });
    </script>
}
